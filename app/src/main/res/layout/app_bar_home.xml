<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JomRide.Home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar" />

    </android.support.design.widget.AppBarLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            tools:showIn="@layout/app_bar_home">

            <include layout="@layout/content_home" />
            <android.support.v7.widget.CardView
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@drawable/pin"

                            />
                        <fragment
                            android:id="@+id/location"
                            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            tools:context="asliborneo.router.JomRide.Home"
                            tools:layout="@layout/app_bar_home" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"

                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6"

                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"

                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:src="@drawable/destinations"/>
                        <fragment
                            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                            android:layout_width="0dp"
                            android:hint="Enter Your Destination"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            tools:context="asliborneo.router.JomRide.Home"
                            android:id="@+id/destination"

                            />
                    </LinearLayout>



                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bottom_sheet_rider"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        android:src="@layout/bottom_sheet_rider"/>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="4dp"

                        android:id="@+id/select_car_group"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/ic_enabled"
                                android:layout_marginRight="12dp"
                                app:srcCompat="@drawable/ic_home_black_24dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/teksi_disabled"
                                android:layout_marginLeft="12dp"
                                app:srcCompat="@drawable/ic_dashboard_black_24dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:id="@+id/wallet_button_holder"
                                android:layout_marginLeft="12dp"
                                app:srcCompat="@drawable/ic_notifications_black_24dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                        </LinearLayout>




                    </LinearLayout>
                    <Button
                        android:layout_below="@+id/select_car_group"
                        android:layout_weight="1"

                android:layout_gravity="center"

                        android:layout_marginBottom="16dp"

                        android:textColor="#FFFFFF"
                        android:textSize="22sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_shape"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"

                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="PICKUP REQUEST"
                        android:id="@+id/btnpickuprequest"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </android.support.v7.widget.CardView>



</RelativeLayout>